<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testTxt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test">

    <Button
        android:id="@+id/testBtnB"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/testBtnA"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:background="#E2009688"
        android:text="B)"
        android:textColor="#F6F3F3"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/testBtnC"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/testBtnB"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:background="#E2009688"
        android:text="C)"
        android:textColor="#F6F3F3"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/testTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:background="#009688"
        android:text="Test 01"
        android:textColor="#CDDC39"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/testQuestionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="1) How many Victory Points do you need in order to win the game?"
        android:textColor="#050505"
        android:textSize="20sp" />

    <Button
        android:id="@+id/testBtnA"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/testQuestionTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:background="#E2009688"
        android:text="A)"
        android:textColor="#F6F3F3"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/testHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EndTest"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:text="(*)Press the correct text to continue."
        android:textSize="18sp" />

    <Button
        android:id="@+id/EndTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AnswerTxTView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:background="#E2009688"
        android:text="END"
        android:textColor="#F6F1F1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/AnswerTxTView"
        android:layout_width="234dp"
        android:layout_height="59dp"
        android:layout_below="@+id/AnswerTxtViewC"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="TextView"
        android:textColor="#0C0C0C"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/AnswerTxtViewA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testQuestionTxt"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/testBtnA"
        android:layout_toRightOf="@+id/testBtnA"
        android:text="TextView"
        android:textColor="#0B0A0A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/AnswerTxtViewB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AnswerTxtViewA"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/testBtnB"
        android:layout_toRightOf="@+id/testBtnB"
        android:text="TextView"
        android:textColor="#0B0A0A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/AnswerTxtViewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AnswerTxtViewB"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/testBtnC"
        android:layout_toRightOf="@+id/testBtnC"
        android:text="TextView"
        android:textColor="#0B0A0A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/WrongAnswertextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testQuestionTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:textColor="#090909"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>